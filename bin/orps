#!/bin/bash

tmpf=/tmp/orps.$$

if 2>/dev/null svn status | egrep -e '^\?' | awk '{print $2}' | egrep -v '.d$'
then
    exit 0
elif 2>/dev/null git status > ${tmpf}
then

    lno=$(egrep -n 'Untracked files' ${tmpf} | egrep '^[0-9]' | sed 's/:.*//')

    if [ -n "${lno}" ]
    then
        nhead=$(( ${lno} + 2 ))
        lc=$(wc -l ${tmpf} | awk '{print $1}')
        ntail=$(( ${lc} - ${nhead} ))
        cat ${tmpf} | tail -n ${ntail} | awk '{print $2}'
    fi
    rm -f ${tmpf}
fi
