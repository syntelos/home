#!/bin/bash

tmpf=/tmp/tmp.$$

if rm -f ${tmpf}
then
    if [ -d '.svn' ]
    then
        if svn status > ${tmpf}
        then
	    for line in $( egrep -e '^M' ${tmpf} | awk '{print $2":"$3}')
	    do
	        case ${line} in
		    \+:*)
		        echo ${line} | sed 's/.*://'
		        ;;
		    :*)
		        echo ${line} | sed 's/://'
		        ;;
		    *:)
		        echo ${line} | sed 's/://'
		        ;;
		    *)
		        echo ${line}
		        ;;
	        esac
	    done
	    exit 0
        else
	    cat<<EOF >&2
Error running subversion
EOF
	    exit 1
        fi
    elif [ -d '.git' ]
    then
        if git status | grep modified | awk '{print $3}'
        then
	    exit 0
        else
	    cat<<EOF >&2
Error running git
EOF
	    exit 1
        fi
    fi

else
    cat<<EOF >&2
Error creating temp file
EOF
    exit 1
fi
