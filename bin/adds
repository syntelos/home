#!/bin/bash

if [ -d '.svn' ]
then
    svn status | egrep -e '^A' | sed 's/\+//' | awk '{print $2}'

elif [ -d '.git' ]
then
    if git status | grep 'new file' | awk '{print $4}'
    then
	exit 0
    else
	cat<<EOF >&2
Error running git
EOF
	exit 1
    fi

else
    cat<<EOF>&2
Error, version control not found
EOF
    exit 1
fi
